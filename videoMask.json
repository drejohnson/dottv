{
  "Headings" : {
    "title" : {
      "type" : "StructuredText",
      "fieldset" : "Main title",
      "config" : {
        "single" : "heading1",
        "placeholder" : "As displayed when with the content"
      }
    },
    "explicittitle" : {
      "fieldset" : "Sub title",
      "type" : "StructuredText",
      "config" : {
        "single" : "heading2",
        "placeholder" : "Useful if your main title isn't explicit about the topic (most notably, for links)"
      }
    },
    "shortlede" : {
      "fieldset" : "Short lede (~15 words)",
      "type" : "StructuredText",
      "config" : {
        "single" : "paragraph",
        "placeholder" : "The shortest catcher to your topic"
      }
    },
    "longlede" : {
      "fieldset" : "Long lede (~100 words)",
      "type" : "StructuredText",
      "config" : {
        "single" : "paragraph,em,strong,hyperlink",
        "placeholder" : "The best way to describe the exhaustive coverage of the article"
      }
    }
  },
  "Content" : {
    "content" : {
      "fieldset" : "Main content",
      "type" : "StructuredText",
      "config" : {
        "placeholder" : "This is where your all your content goes.",
        "imageConstraint" : {
          "width" : 600
        }
      }
    },
    "videoembed" : {
      "fieldset" : "Video Embed Link",
      "type" : "Embed",
      "config" : {
        "placeholder" : "Add Youtube/Vimeo Video URLs here"
      }
    },
    "youtubeid" : {
      "fieldset" : "Youtube Video ID",
      "type" : "StructuredText",
      "config" : {
        "single" : "embed",
        "placeholder" : "Add Youtube Video ID here (The video ID is the part between v= and & of the video's URL)"
      }
    },
    "vimeoid" : {
      "fieldset" : "Vimeo Video ID",
      "type" : "StructuredText",
      "config" : {
        "single" : "embed",
        "placeholder" : "Add Vimeo Video ID here (The video ID is the numbers that come after the slash /)"
      }
    },
    "poster" : {
      "fieldset" : "Video Poster",
      "type" : "Image",
      "config" : {
        "constraint" : {
          "width" : 1600
        },
        "thumbnails" : [ {
          "name" : "Icon",
          "width" : 100,
          "height" : 100
        }, {
          "name" : "Column",
          "width" : 320,
          "height" : 320
        }, {
          "name" : "Wide",
          "width" : 600,
          "height" : 300
        } ]
      }
    },
    "channel" : {
      "type" : "Select",
      "config" : {
        "label" : "Channel",
        "options" : [ "movies", "music", "docu-series", "comedy", "radio-tv" ]
      }
    }
  },
  "Metadata" : {
    "related" : {
      "fieldset" : "Related videos",
      "type" : "Group",
      "config" : {
        "fields" : {
          "link" : {
            "type" : "Link",
            "config" : {
              "placeholder" : "Select an Video",
              "select" : "document",
              "masks" : [ "video" ]
            }
          }
        }
      }
    },
    "date" : {
      "fieldset" : "Post properties",
      "type" : "Date",
      "config" : {
        "label" : "Post date"
      }
    },
    "allow_comments" : {
      "type" : "Select",
      "config" : {
        "label" : "Allow comments",
        "options" : [ "Yes", "No" ]
      }
    },
    "priority" : {
      "type" : "Number",
      "config" : {
        "label" : "Priority",
        "min" : 0
      }
    },
    "author" : {
      "fieldset" : "Author",
      "type" : "Link",
      "config" : {
        "select" : "document",
        "masks" : [ "author" ],
        "placeholder" : "Select this article's author"
      }
    }
  }
}